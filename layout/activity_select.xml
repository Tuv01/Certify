<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientsilver"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".SelectActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="420dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@drawable/layout_bg_round">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/certifytrustlogo"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/certifylogoandslogan250"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btnCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Company"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_button_select"
            android:drawableStart="@drawable/enterpriseblack32"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/btnStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Student"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_button_select"
            android:drawableStart="@drawable/education32"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

</LinearLayout>